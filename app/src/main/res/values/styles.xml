<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="contact_item_tv">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="contact_item_imgView">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="favorite_item_tv">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="favorite_item_imgView">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="note_item_tv">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="dialogFragment_edName">
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="dialogFragment_edNumber">
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="dialogFragment_btn">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="dialogAddNoteFragment_edTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="dialogAddNoteFragment_edContent">
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="open_note_frag_tv">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EdFrag_Btn">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TvDialogFrag_Edit">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="edFrag_Edit">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>
