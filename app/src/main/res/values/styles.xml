<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_btn" >
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/edTextSize</item>
        <item name="android:background">@color/colorBtn</item>
    </style>

    <style name="RegisterEd" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/edTextSize</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="register_btnSubmit" >
        <item name="android:textSize">@dimen/btnTextSize</item>
        <item name="android:background">@color/tvReg</item>
    </style>

    <style name="login_btnLogin" >
        <item name="android:textSize">@dimen/btnTextSize</item>
        <item name="android:background">@color/tvReg</item>
    </style>

    <style name="addContact_Ed" >
        <item name="android:textSize">@dimen/edTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="addContact_btn" >
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
        <item name="android:background">@color/tvReg</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="custom_item_app_img" >
        <item name="android:layout_weight">1</item>
    </style>
    <style name="custom_item_app_tv" >
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
    </style>
</resources>
