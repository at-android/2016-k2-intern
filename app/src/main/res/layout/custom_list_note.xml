<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_custom_layout_margin"
        android:layout_marginStart="@dimen/tv_custom_layout_margin"
        android:textSize="@dimen/title_note_text_size" />

    <TextView
        android:id="@+id/tvTime_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle_note"
        android:layout_marginLeft="@dimen/tv_custom_layout_margin"
        android:layout_marginStart="@dimen/tv_custom_layout_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_2dp"
        android:layout_below="@id/tvTime_note"
        android:layout_marginTop="@dimen/line_2dp"
        android:background="@android:color/black" />
</RelativeLayout>
