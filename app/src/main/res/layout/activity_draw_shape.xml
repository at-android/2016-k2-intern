<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <vn.asiantech.training.views.HeaderOptionsView
        android:id="@+id/header_login"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:onClick="onClicked"
        app:isShowBtnBack="true"
        app:isShowBtnNext="false"
        app:isShowTvHome="true"
        app:isShowTvTitle="true"
        app:title="@string/header_tv_shape" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/draw_shape_continue" />

    <vn.asiantech.training.views.DrawShapeView
        android:id="@+id/draw_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
