<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvTitle"
            android:textSize="@dimen/fragment_listView_tv_title_size"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            tools:ignore="RelativeOverlap" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imvAdd"
            android:contentDescription="@null"
            android:layout_marginEnd="@dimen/fragment_listView_icon_add_margin_right"
            android:layout_marginRight="@dimen/fragment_listView_icon_add_margin_right"
            />

    </RelativeLayout>
    <ListView
        android:layout_marginTop="@dimen/fragment_listView_lv_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvStudent"
        ></ListView>
</LinearLayout>