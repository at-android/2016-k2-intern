<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_drawer_padding_top"
        android:textSize="@dimen/item_contact_text_size"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:padding="@dimen/item_drawer_padding_top"
        android:textSize="@dimen/item_contact_text_size" />

    <ImageView
        android:id="@+id/imvStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:padding="@dimen/item_drawer_padding_top"
        android:src="@drawable/ic_star"

        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_view_height"
        android:layout_below="@+id/imvStar"
        android:layout_marginTop="@dimen/item_contact_view_margin_top"
        android:background="@android:color/black" />
</RelativeLayout>
