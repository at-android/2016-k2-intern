<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_content_size" />

    <TextView
        android:id="@+id/time_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/time_content_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height_custom_rv"
        android:layout_below="@id/time_content"
        android:background="@android:color/white" />
</RelativeLayout>
