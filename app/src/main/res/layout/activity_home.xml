<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.asiantech.training.activities.HomeActivity">

    <vn.asiantech.training.custom_layout.HeaderLayout
        android:id="@+id/headLayoutTitleHome"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?android:selectableItemBackground"
        custom:titleText="@string/home_title_text" />

    <Button
        android:id="@+id/btnDrawShape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headLayoutTitleHome"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/btn_draw_shape" />

    <Button
        android:id="@+id/btnDrawBitmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDrawShape"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/btn_draw_draw_bitmap" />

    <Button
        android:id="@+id/btnDrawText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDrawBitmap"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/btn_draw_text" />

    <Button
        android:id="@+id/btnDrawChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDrawText"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="@string/btn_draw_chart" />
</RelativeLayout>
