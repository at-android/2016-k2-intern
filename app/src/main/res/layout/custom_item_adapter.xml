<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_item_colorBackground"
        android:gravity="center"
        android:textColor="@color/custom_item_color"
        android:textSize="@dimen/custom_item_tvSize" />
    <android.support.v4.view.ViewPager
        android:layout_below="@id/tvItem"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/custom_item_viewPagerBackground"></android.support.v4.view.ViewPager>
</RelativeLayout>