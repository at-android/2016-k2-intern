<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:padding="@dimen/edit_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/edit_tv_title"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_back" />

    <EditText
        android:id="@+id/edName"
        style="@style/EditTextEditFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvBack"
        android:hint="@string/edit_edt_name_hint" />

    <Spinner
        android:id="@+id/spType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edName"
        android:layout_marginTop="@dimen/add_sp_margin_top"
        android:padding="@dimen/add_sp_padding" />

    <EditText
        android:id="@+id/edCost"
        style="@style/EditTextEditFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spType"
        android:hint="@string/edit_edt_cost_hint" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edCost"
        android:text="@string/edit_btn_text" />
</RelativeLayout>
