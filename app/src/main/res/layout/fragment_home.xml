<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.asiantech.training.HomeFragment">

    <TextView
        android:id="@+id/tvHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/home_fragment_tv"
        android:textSize="@dimen/Home_Fragment_textSize" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/Home_Fragment_btnMarginTop"
        android:text="@string/home_fragment_btnPlay"
        android:textSize="@dimen/Home_Fragment_btnSize" />

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPlay"
        android:layout_centerHorizontal="true"
        android:text="@string/home_fragment_btnQuit"
        android:textSize="@dimen/Home_Fragment_btnSize" />
</RelativeLayout>
