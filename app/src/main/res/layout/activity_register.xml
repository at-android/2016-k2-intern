<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/register_title"
        android:textSize="@dimen/register_title_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRegister"
        android:layout_marginTop="@dimen/edt_margin_top"
        android:hint="@string/register_edt_hint_name"
        android:inputType="text"
        android:padding="@dimen/register_edt_padding" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_marginTop="@dimen/edt_margin_top"
        android:hint="@string/register_edt_hint_email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/register_edt_padding" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEmail"
        android:layout_marginTop="@dimen/edt_margin_top"
        android:hint="@string/register_edt_hint_password"
        android:inputType="textPassword"
        android:padding="@dimen/register_edt_padding" />

    <EditText
        android:id="@+id/edtPasswordRewrite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassword"
        android:layout_marginTop="@dimen/edt_margin_top"
        android:hint="@string/register_edt_hint_password_rewrite"
        android:inputType="textPassword"
        android:padding="@dimen/register_edt_padding" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPasswordRewrite"
        android:background="@color/colorPrimaryDark"
        android:text="@string/register_btn_register"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPasswordRewrite"
        android:layout_marginLeft="@dimen/register_btn_cancel_margin_left"
        android:layout_marginStart="@dimen/register_btn_cancel_margin_left"
        android:layout_toEndOf="@id/btnRegister"
        android:layout_toRightOf="@id/btnRegister"
        android:background="@color/colorPrimaryDark"
        android:text="@string/register_btn_cancel"
        android:textColor="@android:color/white" />
</RelativeLayout>
