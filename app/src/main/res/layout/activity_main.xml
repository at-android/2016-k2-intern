<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="vn.asiantech.training.MainActivity">

    <TextView
        android:id="@+id/tvNumber"
        android:layout_marginTop="@dimen/activity_marginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/tvNumberSize"
        android:textColor="@color/tvNumber"/>
    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/btnOK"
        android:textSize="@dimen/btnSize"/>

    <TextView
        android:layout_marginTop="@dimen/activity_TvSecondmarginTop"
        android:id="@+id/tvSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/tvSecondSize"
        android:textColor="@color/tvSecond"/>
</LinearLayout>
