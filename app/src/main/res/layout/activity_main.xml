<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="vn.asiantech.training.MainActivity">

    <RelativeLayout
        android:id="@+id/rltShowNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_layout_show_number_height"></RelativeLayout>

    <LinearLayout
        android:id="@+id/lnrKeybroad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rltShowNumber"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/bt1"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <Button
                android:id="@+id/bt2"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <Button
                android:id="@+id/bt3"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number3"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/bt4"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number4"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <Button
                android:id="@+id/bt5"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <Button
                android:id="@+id/bt6"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number6"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/bt7"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number7"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <Button
                android:id="@+id/bt8"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number8"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <Button
                android:id="@+id/bt9"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number9"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btHoaThi"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/asterick1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <Button
                android:id="@+id/bt0"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/number0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <Button
                android:id="@+id/btThang"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:text="@string/hashtag1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/btListNumber"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:contentDescription="@null"
                android:src="@drawable/ic_contacts_green_600_36dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <ImageButton
                android:id="@+id/btCallPhone"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:contentDescription="@null"
                android:src="@drawable/ic_call_green_600_36dp"
                android:text="@string/number1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />

            <ImageButton
                android:id="@+id/btDelete"
                style="@style/AlertDialog.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/main_bt_margin_around"
                android:layout_weight="1"
                android:background="@color/bt_color"
                android:contentDescription="@null"
                android:src="@drawable/ic_backspace_green_600_36dp"
                android:text="@string/number1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_bt_text_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
