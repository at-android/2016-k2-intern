<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="vn.asiantech.training.MainActivity">

    <TextView

        android:id="@+id/tvExpress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="@dimen/call_tv_input_text_padding"
        android:textColor="@android:color/white"
        android:textSize="@dimen/call_tv_input_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumber1"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_1"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/tvNumber2"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_2" />

        <TextView
            android:id="@+id/tvNumber3"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumber4"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_4"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/tvNumber5"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_5" />

        <TextView
            android:id="@+id/tvNumber6"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumber7"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_7"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/tvNumber8"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_8" />

        <TextView
            android:id="@+id/tvNumber9"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumberStar"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_start"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/tvNumber0"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_0" />

        <TextView
            android:id="@+id/tvNumberShape"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/call_tv_number_shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvContact"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/contacts"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/imvCall"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/imvDelete"
            style="@style/TextViewNumberCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:src="@drawable/delete" />
    </LinearLayout>
</LinearLayout>
