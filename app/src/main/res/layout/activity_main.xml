<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.asiantech.training.MainActivity">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_start_text" />

    <TextView
        android:id="@+id/txt_number_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_margin_general"
        android:text="@string/number_default"
        android:textSize="@dimen/text_random_size" />

    <TextView
        android:id="@+id/txt_number_countdown"
        android:layout_width="@dimen/text_countdown_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_number_random"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/text_margin_general"
        android:background="@android:color/black"
        android:text="@string/number_default"
        android:textAlignment="center"
        android:textColor="@android:color/white" />
</RelativeLayout>
