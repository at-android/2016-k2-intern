<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.asiantech.training.MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_tv"
        android:textSize="@dimen/main_tvSize"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/imgView"
        android:layout_below="@+id/tvTitle"
        android:layout_width="@dimen/main_imgWidth"
        android:layout_height="@dimen/main_imgHeight"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_alarm_add_green_700_24dp"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_below="@+id/imgView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvHour"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="10"
            />
        <TextView
            android:id="@+id/tvMinute"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="25"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:text="start"
        android:textSize="25sp"
        />

</RelativeLayout>
