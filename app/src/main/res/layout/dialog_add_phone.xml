<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imvContact"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorAccent"
        android:contentDescription="@null"
        android:src="@drawable/ic_edit" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvContact"
        android:layout_marginTop="@dimen/dialog_add_phone_edt_margin_top"
        android:hint="@string/dialog_add_phone_edt_name_hint" />

    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_marginTop="@dimen/dialog_add_phone_edt_margin_top"
        android:hint="@string/dialog_add_phone_edt_phone_hint"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPhone"
        android:background="@color/colorPrimaryDark"
        android:text="@string/dialog_btn_Add"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPhone"
        android:layout_marginLeft="@dimen/register_btn_cancel_margin_left"
        android:layout_marginStart="@dimen/register_btn_cancel_margin_left"
        android:layout_toEndOf="@id/btnAdd"
        android:layout_toRightOf="@id/btnRegister"
        android:background="@color/colorPrimaryDark"
        android:text="@string/register_btn_cancel"
        android:textColor="@android:color/white" />
</RelativeLayout>