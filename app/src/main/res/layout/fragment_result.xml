<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.asiantech.training.ResultFragment">

    <TextView
        android:id="@+id/tvTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorPrimaryDark"
        android:text="@string/txt_result_title"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/rcv_margin_left"
        android:layout_marginStart="@dimen/rcv_margin_left"
        android:layout_marginTop="100dp"
        android:scrollbars="horizontal"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnBackMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/result_btn_margin_top"
        android:text="@string/btn_back_main_txt" />
</FrameLayout>
