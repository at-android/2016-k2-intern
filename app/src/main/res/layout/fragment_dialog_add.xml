<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="vn.asiantech.training.DialogAddFragment">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Dialog_fragment_tv"
        android:textSize="@dimen/DialogFragment_tv" />

    <EditText
        android:id="@+id/edName"
        style="@style/dialogFragment_edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:gravity="center"
        android:hint="@string/Dialog_fragment_edName" />

    <EditText
        android:id="@+id/edNumber"
        style="@style/dialogFragment_edNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edName"
        android:gravity="center"
        android:hint="@string/Dialog_fragment_edNumber" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edNumber"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOK"
            style="@style/dialogFragment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Dialog_fragment_btnOK" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/dialogFragment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Dialog_fragment_btnCancel" />
    </LinearLayout>
</RelativeLayout>
