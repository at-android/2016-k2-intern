<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imvIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_drawer_padding_left"
        android:layout_marginStart="@dimen/item_drawer_padding_left"
        android:contentDescription="@null"
        android:src="@drawable/ic_list" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imvIcon"
        android:layout_toRightOf="@+id/imvIcon"
        android:paddingBottom="@dimen/item_drawer_padding_top_bottom"
        android:paddingEnd="@dimen/item_drawer_padding_left"
        android:paddingLeft="@dimen/item_drawer_padding_left"
        android:paddingStart="@dimen/item_drawer_padding_left"
        android:paddingTop="@dimen/item_drawer_padding_top"
        android:textSize="@dimen/item_drawer_text_size"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_view_height"
        android:layout_below="@+id/title"
        android:background="@color/colorPrimaryDark" />
</RelativeLayout>
